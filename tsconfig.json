{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*", "tests/**/*", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
